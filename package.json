{
  "name": "vmx",
  "version": "1.0.0",
  "description": "VOCALOID-ManiaX オフィシャルサイト",
  "author": "pikoshimame <pikoshimame@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "HOST=0.0.0.0 PORT=3333 nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "setup": "npm run build && npm run clean && npm run copy",
    "clean": "mkdir -p public && rm -rf public/*",
    "copy": "cp -r .nuxt/ functions/.nuxt/ && cp -r .nuxt/dist/ public/assets/ && cp -R src/static/* public/"
  },
  "dependencies": {
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/google-analytics": "^2.2.3",
    "@nuxtjs/pwa": "^3.0.0-beta.19",
    "@nuxtjs/style-resources": "^1.0.0",
    "contentful": "^7.13.0",
    "lodash.throttle": "^4.1.1",
    "markdown-it": "^10.0.0",
    "nuxt": "^2.11.0",
    "reset-css": "^5.0.1",
    "vue-js-modal": "^1.3.31"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-vue": "^6.1.2",
    "firebase-tools": "^7.11.0",
    "node-sass": "^4.13.0",
    "sass-loader": "^8.0.1"
  }
}
