{
  "name": "vmx",
  "version": "1.0.0",
  "description": "VOCALOID-ManiaX オフィシャルサイト",
  "author": "pikoshimame <pikoshimame@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "setup": "npm run build && npm run clean && npm run copy",
    "clean": "mkdir -p public && rm -rf public/*",
    "copy": "cp -r .nuxt/ functions/.nuxt/ && cp -r .nuxt/dist/ public/assets/ && cp -R src/static/* public/"
  },
  "dependencies": {
    "@nuxtjs/google-analytics": "^2.0.2",
    "@nuxtjs/pwa": "^2.0.5",
    "contentful": "^5.1.0",
    "lodash.throttle": "^4.1.1",
    "normalize.css": "^8.0.0",
    "nuxt": "^2.3.4",
    "vue-js-modal": "^1.3.28"
  },
  "devDependencies": {
    "@nuxtjs/dotenv": "^1.3.0",
    "babel-eslint": "^8.2.1",
    "eslint": "^4.15.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-vue": "^4.0.0",
    "firebase-tools": "^6.2.2",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6"
  }
}
